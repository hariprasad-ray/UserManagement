@model UserDetail
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "User Details";
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h4>User Details</h4>
    </div>
    <div class="card-body">
        @if (Model != null)
        {
            <p><strong>User Name:</strong> @Model.FirstName</p>
            <p><strong>User Email:</strong> @Model.Email</p>
            <p><strong>User Address:</strong>@Model.Address</p>
            <p><strong>Is Active:</strong> @Model.IsActive</p>
        }
    </div>
</div>

