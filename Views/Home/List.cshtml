@model List<UserDetail>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "User List";
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h4>User List</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>Is Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <!--link to the username -->
                        <td><a href="@Url.Action("Details", "Home", new { Id = user.Id })">@user.FirstName</a></td>
                        <td>@user.Email</td>
                        <td>
                            <input type="radio" name="isactive_@user.Id" value="True" @(user.IsActive ? "checked" : "")> Yes
                            <input type="radio" name="isactive_@user.Id" value="False" @(!user.IsActive ? "checked" : "")> No
                        </td>
                        <td><button class="btn btn-warning btn-sm userupdate" data-userId="@user.Id">Update</button>
                            <button class="btn btn-danger btn-sm userdelete" data-userId="@user.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {

        // Update user functionality
        $(".userupdate").on('click', function () {

            var userId = $(this).attr("data-userId");
            var selected = $(`input[type='radio'][name='isactive_${userId}']:checked`).val();

            var userData = {
                id: userId,
                isActive: selected
            }

            $.ajax({

                url: '@Url.Action("Update", "Home")',
                type: "POST",
                data: userData,
                success: function (response) {
                    if (response.status) {
                        $('#activecount').text(response.activecount);
                        $('#inactivecount').text(response.inactivecount);
                        alert('User updated successfully!');
                    } else {
                        alert('User updation failed, please try again!');
                    }
                },
                error: function (request, status, error) {
                    alert('User updation failed, please try again!');
                }
            });
        });

        $(".userdelete").on('click', function () {
            var userId = $(this).attr("data-userId");

            // Confirmation pop-up
            if (confirm('Are you sure you want to delete this user permanently?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Home")',
                    type: "POST",
                    data: { id: userId },
                    success: function (response) {
                        if (response.status) {
                            // Removing the user row from the table
                            $(`button[data-userId='${userId}']`).closest('tr').remove();
                            $('#activecount').text(response.activecount);
                            $('#inactivecount').text(response.inactivecount);
                            alert('User deleted successfully!');
                        } else {
                            alert('User deletion failed, please try again!');
                        }
                    },
                    error: function (request, status, error) {
                        alert('User deletion failed, please try again!');
                    }
                });
            }
        });
    });


</script>